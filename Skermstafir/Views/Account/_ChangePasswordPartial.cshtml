@using Microsoft.AspNet.Identity
@model Skermstafir.Models.ManageUserViewModel

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Breyta lykilorði</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control lykilord" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control lykilord" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control lykilord" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" value="Breyta lykilorði" class="btn btn-default" />
        </div>
    </div>
}
