@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

	    <ul class="logged-in-list">
		    <li>
			    @("Velkomin(n) " + User.Identity.GetUserName() + "!")
		    </li>
		    <li>@Html.ActionLink("Mínar síður", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
		    <li><a href="javascript:document.getElementById('logoutForm').submit()">Útskrá</a></li>
	    </ul>
	}
}
else
{
    <ul class="logged-out-list">
        <li>@Html.ActionLink("Nýskrá", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Innskrá", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}