<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skermstafir - @ViewBag.Title</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="/js/jquery-1.2.6.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="/js/jquery-ui-personalized-1.5.2.packed.js"></script>
    <script language="JavaScript" type="text/javascript" src="/js/sprinkle.js"></script>
    <script type="text/javascript" src="/Scripts/ManageScript.js"></script>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="shared-header">
        @Html.Partial("_LoginPartial")
        <a href="@Url.Content("/")"><img id="logo" src="~/Content/Pictures/StLogo.png" alt="Logo Skermstafa" width="80" /></a>
        <h1>@Html.ActionLink("Skermstafir.is", "Index", "Home")</h1>
        <ul id="shared-menu">
            <li class="col-md-3">@Html.ActionLink("Forsíða", "Index", "Home")</li>
            <li class="col-md-3">@Html.ActionLink("Þýðingar", "Subtitles", "Home")</li>
            <li class="col-md-3">@Html.ActionLink("Beiðnir", "Requests", "Home")</li>
            <li class="col-md-3">@Html.ActionLink("Leiðbeiningar", "Instructions", "Home")</li>
        </ul>
    </div>
    <div class="container body-content">
		<div class='notifications top-left'></div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Skermstafir</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
	<script src="~/Scripts/Upvote.js"></script>
	<script src="~/Scripts/notify.min.js"></script>
	<script src="~/Scripts/Reorder.js"></script>
</body>
</html>