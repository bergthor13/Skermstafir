<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skermstafir - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="container body-content">
		<div class="shared-header">
			@Html.Partial("_LoginPartial")
			<img src="~/Content/Pictures/StLogo.png" alt="Logo Skermstafa" width="80" />
			<h1>@Html.ActionLink("Skermstafir", "Index", "Home")</h1>
			<ul id="shared-menu">
				<li class="col-md-3">@Html.ActionLink("Forsíða", "Index", "Home")</li>
				<li class="col-md-3">@Html.ActionLink("Þýðingar", "Subtitles", "Home")</li>
				<li class="col-md-3">@Html.ActionLink("Beiðnir", "Requests", "Home")</li>
				<li class="col-md-3">@Html.ActionLink("Leiðbeiningar", "Instructions", "Home")</li>
			</ul>
		</div>
		@RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Skermstafir</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
