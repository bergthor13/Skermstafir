<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skermstafir - @ViewBag.Title</title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script type="text/javascript" src="/Scripts/ManageScript.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="shared-header">


        @Html.Partial("_LoginPartial")
        <a href="@Url.Content("/")"><img id="logo" src="~/Content/Pictures/StLogo.png" alt="Logo Skermstafa" width="80" /></a>
        <h1>@Html.ActionLink("Skermstafir.is", "Index", "Home")</h1>
        <ul id="shared-menu">
            <li class="col-md-3">@Html.ActionLink("Forsíða", "Index", "Home")</li>
            <li class="col-md-3">@Html.ActionLink("Þýðingar", "Subtitles", "Home")</li>
            <li class="col-md-3">@Html.ActionLink("Beiðnir", "Requests", "Home")</li>
            <li class="col-md-3">@Html.ActionLink("Leiðbeiningar", "Instructions", "Home")</li>
        </ul>
    </div>
    <div class="container body-content">
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Skermstafir</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>