@model Skermstafir.Models.SubtitleModel

@{
	ViewBag.Title = @Model.subtitle.Name;
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="subtitle-box">
		<div class="box-title">
			@Model.subtitle.Name (@Model.subtitle.YearCreated)
			<p class="votes-req-page"><span class="green-letters">Nú geturðu breytt upplýsingum um þýðinguna, sem og þýðingunni sjálfri.</span></p>
		</div>

		<div class="flokkar-view-edit">
			<input type="checkbox" checked="@Model.genreValue[0]" name="genre1" />
			<label for="genre1">Kvikmyndir</label>
			<input type="checkbox" checked="@Model.genreValue[1]" name="genre2" />
			<label for="genre2">Þættir</label>
			<input type="checkbox" checked="@Model.genreValue[2]" name="genre3" />
			<label for="genre3">Barnaefni</label>
			<input type="checkbox" checked="@Model.genreValue[3]" name="genre4" />
			<label for="genre4">Heimildir</label> <br />
			<input type="checkbox" checked="@Model.genreValue[4]" name="genre5" />
			<label for="genre5">Gaman</label>
			<input type="checkbox" checked="@Model.genreValue[5]" name="genre6" />
			<label for="genre6">Spenna</label>
			<input type="checkbox" checked="@Model.genreValue[6]" name="genre7" />
			<label for="genre7">Drama</label>
			<input type="checkbox" checked="@Model.genreValue[7]" name="genre8" />
			<label for="genre8">Ævintýri</label>
		</div>
		<span id="description">
			<label for="description">Lýsing:</label>
			<textarea id="description-text"
					  name="description"
					  cols="65"
					  rows="10">@Model.subtitle.Description</textarea>
			</span>
        
        <input id="download" class="btn btn-default downloadbtn" type="submit" name="createSubtitle" value="Vista" />

			<p class="info">
				<span class="col-md-2">Stofnandi þýðingar:</span>
				@Model.subtitle.Username
			</p>

			<p class="info">
				<span class="col-md-2">Tungumál:</span>
				<span id="language-with-flag">
					@if (@Model.subtitle.LanguageId == 1)
                    {
                        <img src="http://www.senojflags.com/images/national-flag-icons/Iceland-Flag.png" alt="Flag" />
                        @Model.subtitle.Language.Name
                    }
                    else if(@Model.subtitle.LanguageId == 2)
                    {
                        <img src="http://www.senojflags.com/images/national-flag-icons/England-Flag.png" alt="Flag" />
                        @Model.subtitle.Language.Name
                    }
				</span>
			</p>

			<p class="info">
				<label for="actors" class="col-md-2">Aðalleikarar:</label>
				<input type="text" name="actors" value="@Model.subtitle.Actors" />
			</p>

			<p class="info">
				<label for="director" class="col-md-2">Leikstjóri:</label>
				<input type="text" name="director" value="@Model.subtitle.Director"  />
			</p>

			<p class="info">
				<label for="year" class="col-md-2">Útgáfuár:</label>
				<input type="text" name="year" value="@Model.subtitle.YearCreated"  />
			</p>

			<p class="info">
				<label for="link" class="col-md-2">Linkur á myndband:</label>
				<input type="text" name="link" value="@Model.subtitle.Link"  />
			</p>
		</div>

		<div class="col-md-6">
			<h3 align="center">Upprunalegur texti</h3>
			<textarea id="originalText" name="originalText" cols="900" rows="40">@Model.subtitle.Content</textarea>
		</div>

		<div class="col-md-6">
			<h3 align="center">Þýðing:</h3>
			<textarea id="editedText" name="editedText" cols="900" rows="40">@Model.subtitle.EditContent</textarea>
		</div>
}