@model Skermstafir.Models.SubtitleModel

@{
    ViewBag.Title = "Edit Subtitle";
}

<div class="subtitle-box">
	<div class="box-title">
		@Model.subtitle.Name

		<p class="votes-req-page">▲ 00NI</p>
	</div>
	<div class="flokkar-view-edit">
		<input type="checkbox" id="genre1" />
		<label for="genre1">Kvikmyndir</label>

		<input type="checkbox" id="genre2" />
		<label for="genre2">Þættir</label>

		<input type="checkbox" id="genre3" />
		<label for="genre3">Barnaefni</label>

		<input type="checkbox" id="genre4" />
		<label for="genre4">Heimildir</label> <br />

		<input type="checkbox" id="genre5" />
		<label for="genre5">Gaman</label>

		<input type="checkbox" id="genre6" />
		<label for="genre6">Spenna</label>

		<input type="checkbox" id="genre7" />
		<label for="genre7">Drama</label>

		<input type="checkbox" id="genre8" />
		<label for="genre8">Ævintýri</label>
	</div>

	<p>Stofnandi þýðingu: @Model.subtitle.AspNetUsers.FirstOrDefault().UserName</p>

	<p>Útgáfuár:</p>
	<input type="text" name="year" value="@Model.subtitle.YearCreated" disabled />
	<textarea id="description" cols="50" rows="8">@Model.subtitle.Description</textarea>
</div>
<div class="col-md-6">
	<textarea id="originalText" cols="900" rows="40"></textarea>
</div>

<div class="col-md-6">
	<textarea id="editedText" cols="900" rows="40"></textarea>
</div>