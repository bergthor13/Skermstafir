@model Skermstafir.Models.SubtitleModel

@{
	ViewBag.Title = @Model.subtitle.Name;
}

<div class="subtitle-box">
	<div class="box-title">
		@Model.subtitle.Name (@Model.subtitle.YearCreated)
		<p class="votes-req-page">▲ @Model.subtitle.Votes.Count</p>
	</div>

	<div class="flokkar disabled">
		<input type="checkbox" id="genre1" disabled />
		<label for="genre1">Kvikmyndir</label>

		<input type="checkbox" id="genre2" disabled />
		<label for="genre2">Þættir</label>

		<input type="checkbox" id="genre3" disabled />
		<label for="genre3">Barnaefni</label>

		<input type="checkbox" id="genre4" disabled />
		<label for="genre4">Heimildir</label> <br />

		<input type="checkbox" id="genre5" disabled />
		<label for="genre5">Gaman</label>

		<input type="checkbox" id="genre6" disabled />
		<label for="genre6">Spenna</label>

		<input type="checkbox" id="genre7" disabled />
		<label for="genre7">Drama</label>

		<input type="checkbox" id="genre8" disabled />
		<label for="genre8">Ævintýri</label>
	</div>

	<p id="user">Stofnandi þýðingu: @Model.subtitle.AspNetUsers.FirstOrDefault().UserName</p>
	<p id="year">Útgáfuár: <input type="text" name="year" value="@Model.subtitle.YearCreated" disabled /></p>
	
	<textarea id="description" cols="50" rows="10" disabled>@Model.subtitle.Description</textarea>
	@if (User.Identity.IsAuthenticated)
	{
		<input id="edit-subtitle"type="button" name="createSubtitle" value="Breyta þýðingu" />
	}
	
		<input id="download" type="button" name="createSubtitle" value="Niðurhala" />
	
	<p>Stofnandi þýðingu: @Model.subtitle.AspNetUsers.FirstOrDefault().UserName</p>

	<p>Útgáfuár:</p>
	<input type="text" name="year" value="@Model.subtitle.YearCreated" disabled />
	<textarea id="description" cols="50" rows="8" disabled>@Model.subtitle.Description</textarea>
</div>
<div class="col-md-6">
	<textarea id="originalText" cols="900" rows="40" disabled></textarea>
</div>

<div class="col-md-6">
	<textarea id="editedText" cols="900" rows="40" disabled></textarea>
</div>

