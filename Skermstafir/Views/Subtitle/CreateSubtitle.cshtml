@model Skermstafir.Models.SubtitleModel

@{
    ViewBag.Title = "Stofna þýðingu";
}

@using (Html.BeginForm("CreateSubtitle", "Subtitle", FormMethod.Post, new { id = "postNew" }))
{
    @Html.AntiForgeryToken()
    <div class="subtitle-box" id="create-subtitle">
        <div class="box-title make-me-green">
            Stofna þýðingu
        </div>
        <div class="flokkar-view-edit">
			<input type="checkbox" name="genre1" checked="@Model.genreValue[0]" />
            <label for="genre1">Kvikmyndir</label>
            <input type="checkbox" name="genre2" checked="@Model.genreValue[1]" />
            <label for="genre2">Þættir</label>
            <input type="checkbox" name="genre3" checked="@Model.genreValue[2]" />
            <label for="genre3">Barnaefni</label>
            <input type="checkbox" name="genre4" checked="@Model.genreValue[3]" />
            <label for="genre4">Heimildir</label> <br />
            <input type="checkbox" name="genre5" checked="@Model.genreValue[4]" />
            <label for="genre5">Gaman</label>
            <input type="checkbox" name="genre6" checked="@Model.genreValue[5]" />
            <label for="genre6">Spenna</label>
            <input type="checkbox" name="genre7" checked="@Model.genreValue[6]" />
            <label for="genre7">Drama</label>
            <input type="checkbox" name="genre8" checked="@Model.genreValue[7]" />
            <label for="genre8">Ævintýri</label>
        </div>
        <span id="description">
            <label for="description">Lýsing:</label>
            <textarea id="description-text"
                      name="description"
                      cols="65"
                      rows="10"
                      placeholder="Stutt lýsing og söguþráður.">@Model.subtitle.Description</textarea>
        </span>

        <input id="download" class="btn btn-default downloadbtn" type="submit" name="createSubtitle" value="Vista þýðingu" onclick="showTitleError();" />
        
        <p class="info">
            <label for="title" class="col-md-2">* Titill:</label>
            <input id="titleBox" type="text" name="title" value="@Model.subtitle.Name" placeholder="t.d. Anchorman 2, The Legend Continues" />
        </p>

        <p id="titleError">
            Þú verður að skrá inn titil myndefnis.
        </p>

        <p class="info">
            <span class="col-md-2">Tungumál:</span>

            <select name="language">
					<option value="Íslenska" selected>Íslenska</option>
					<option value="Enska">Enska</option>
            </select>
        </p>
        <p class="info">
            <label for="director" class="col-md-2">Leikstjóri:</label>
            <input type="text" name="director" value="@Model.subtitle.Director" placeholder="t.d. Woody Allen" />
        </p>
        <p class="info">
            <label for="actors" class="col-md-2">Aðalleikarar:</label>
            <input type="text" name="actors" value="@Model.subtitle.Actors" placeholder="Komma aðskilur leikara t.d. Paul Rudd, Philip Seymour Hoffman" />
        </p>
        <p class="info">
            <label for="year" class="col-md-2">Útgáfuár:</label>
            <input type="text" name="year" value="@Model.subtitle.YearCreated" placeholder="t.d. 2014" />
        </p>
        <p class="info">
            <label for="link" class="col-md-2">Hlekkur á myndskeið:</label>
            <input type="text" name="link" value="@Model.subtitle.Link" placeholder="t.d. af YouTube, Vimeo o.þ.h." />
        </p>
        <div class="info">
            <label for="originalText" class="col-md-2">Texti sem á að þýða:</label>
            <textarea id="original-text2" name="originalText" placeholder="Afritaðu textann úr upprunalegu .srt skránni hingað.">@Model.subtitle.Content</textarea>
        </div>
    </div>
}
